# Server Port
PORT=8000

# MongoDB Connection String - REPLACE WITH YOUR OWN
MONGODB_URI=mongodb+srv://username:password@cluster.example.mongodb.net/database?retryWrites=true&w=majority

# JWT Secret - REPLACE WITH A STRONG SECRET
JWT_SECRET=ExampleSecretKey123!ReplaceWithStrongSecret

# Client URL for CORS
CLIENT_URL=http://localhost:3000

# Webhook configuration - CRITICAL for Twilio to reach your server
WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok-free.app

# Demo mode flag (set to false in production)
DEMO_MODE=false

# Node Environment
NODE_ENV=development

# Enhanced Production Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
DB_CONNECTION_POOL_SIZE=10
REQUEST_TIMEOUT=30000
MAX_CONCURRENT_CALLS=50

# Security
SESSION_SECRET=ExampleSessionSecret!ReplaceWithStrongSecret
CORS_ORIGIN=http://localhost:3000

# Cloudinary (replace with your own credentials)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Voice Synthesis Configuration
VOICE_SYNTHESIS_RETURN_URL=false
