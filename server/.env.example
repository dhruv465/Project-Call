# Server Port
PORT=8000

# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/lumina-outreach

# JWT Secret
JWT_SECRET=your_jwt_secret_here

# Client URL for CORS
CLIENT_URL=http://localhost:3000

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# ElevenLabs Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Other LLM Providers
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_API_KEY=your_google_api_key

# Node Environment
NODE_ENV=development

# Emotion Service Configuration
EMOTION_SERVICE_URL=http://localhost:5001
EMOTION_SERVICE_API_KEY=your_emotion_service_key_here
EMOTION_MODEL_VERSION=v1
EMOTION_SERVICE_TIMEOUT=5000
