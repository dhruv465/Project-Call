# Server Port
PORT=8000

# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/lumina-outreach

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=true

# JWT Secret
JWT_SECRET=your_jwt_secret_here

# Client URL for CORS
CLIENT_URL=http://localhost:3000

# Node Environment
NODE_ENV=development

# Bypass authentication in development
BYPASS_AUTH=true

# Emotion Service Configuration
EMOTION_SERVICE_URL=http://localhost:5001
EMOTION_SERVICE_TIMEOUT=5000

# Note: API keys and credentials have been removed from .env
# All API keys and credentials are now configured through the system configuration page
# This avoids confusion and provides a single source of truth for configuration
