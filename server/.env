# Server Configuration
PORT=8000
HOST=0.0.0.0
NODE_ENV=development
API_PREFIX=/api
CORS_ORIGIN=https://yourdomain.com
TRUST_PROXY=true
UPLOAD_DIR=/opt/voice-ai/uploads
TEMP_DIR=/opt/voice-ai/tmp
BYPASS_AUTH=true

# Security Configuration
JWT_SECRET=replace_with_a_strong_secret_key
JWT_EXPIRATION=24h
ENCRYPTION_KEY=replace_with_32_character_key
ENCRYPT_SENSITIVE_DATA=true
SECURITY_HEADERS=true
API_KEY_AUTH=true
JWT_AUTH=true
AUDIT_ENABLED=true
AUDIT_LOG_DIR=/opt/voice-ai/logs/audit

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/voice_ai_prod
DATABASE_SSL=false
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000
DATABASE_RETRY_ATTEMPTS=3

# Telephony Configuration
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBERS=+15551234567,+15557654321
TWILIO_DEFAULT_NUMBER=+15551234567
WEBHOOK_BASE_URL=https://yourdomain.com/api/webhooks
RECORD_CALLS=true
TELEPHONY_FALLBACK_ENABLED=true

# LLM Configuration
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key

# Voice Configuration
ELEVENLABS_API_KEY=your_elevenlabs_key
ELEVENLABS_DEFAULT_VOICE=your_voice_id
GOOGLE_SPEECH_API_KEY=your_google_speech_key

# Monitoring Configuration
ENABLE_METRICS=true
PROMETHEUS_METRICS=true
METRICS_PORT=9090
MEMORY_WARNING_THRESHOLD=70
MEMORY_CRITICAL_THRESHOLD=90
API_LATENCY_WARNING=2000
API_LATENCY_CRITICAL=5000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=true
LOG_DIR=/opt/voice-ai/logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# CRM Configuration
CRM_PROVIDER=your_crm_provider
CRM_API_KEY=your_crm_api_key
CRM_API_URL=https://your-crm-api-url.com
CRM_SYNC_ENABLED=true
CRM_SYNC_INTERVAL=300000
CRM_SYNC_MAX_RETRIES=3
