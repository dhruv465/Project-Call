{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "typeRoots": ["./types", "../types", "../../../node_modules/@types"]
  },
  "include": ["**/*.ts", "../types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
